<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormSubmittedActivty">


    <ImageView
        android:id="@+id/iv_allDone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_done_all_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_formSubmitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form Submitted"
        android:textStyle="bold"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textSize="40sp"
        android:shadowColor="@color/white"
        android:shadowDx="3.0"
        android:shadowDy="3.0"
        android:shadowRadius="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_goToHomePage"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_goToHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Go to Home Page"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="13dp"
        android:shadowColor="@color/white"
        android:shadowDx="3.0"
        android:shadowDy="3.0"
        android:shadowRadius="2"
        style="@style/TextAppearance.MaterialComponents.Overline"
        android:textColor="@color/black"
        android:background="@drawable/button_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>