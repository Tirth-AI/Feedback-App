<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/question_item_bg">

    <LinearLayout
        android:id="@+id/ll_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:text="Hello tirth how are you?"
        android:textSize="20sp"/>

    </LinearLayout>

    <RatingBar
        android:id="@+id/customRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleIndicator"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0"
        android:isIndicator="false"
        android:layout_marginTop="5dp"
        android:progressTint="@color/golden_yellow"
        app:layout_constraintStart_toStartOf="@id/ll_question"
        app:layout_constraintEnd_toEndOf="@id/ll_question"
        app:layout_constraintTop_toBottomOf="@id/ll_question"/>

</androidx.constraintlayout.widget.ConstraintLayout>